<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ======================= -->
    <!-- 🎨 CORES PADRÃO DESKPRO -->
    <!-- ======================= -->
    <Color x:Key="DeskProGreen">#00C896</Color>
    <Color x:Key="DeskProDark">#1A2635</Color>
    <Color x:Key="DeskProAccent">#0AA077</Color>
    <Color x:Key="DeskProBackground">#F1F7F9</Color>
    <Color x:Key="DeskProTextDark">#092A2E</Color>
    <Color x:Key="DeskProMuted">#6B7B86</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource DeskProGreen}" />
    <SolidColorBrush x:Key="DarkBrush" Color="{StaticResource DeskProDark}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource DeskProAccent}" />
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource DeskProBackground}" />
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource DeskProTextDark}" />
    <SolidColorBrush x:Key="MutedBrush" Color="{StaticResource DeskProMuted}" />
    <SolidColorBrush x:Key="ShadowBrush" Color="#092A2E" />

    <!-- ======================= -->
    <!-- 🪟 ESTILO GLOBAL DE JANELAS -->
    <!-- ======================= -->
    <Style TargetType="Window">
        <Setter Property="Background" Value="{StaticResource BackgroundBrush}" />
        <Setter Property="FontFamily" Value="Poppins" />
        <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
        <Setter Property="WindowStartupLocation" Value="CenterScreen"/>
    </Style>

    <!-- ======================= -->
    <!-- 🔘 BOTÕES -->
    <!-- ======================= -->
    <Style TargetType="Button">
        <Setter Property="Background" Value="{StaticResource PrimaryBrush}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="FontFamily" Value="Poppins" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Padding" Value="10,6" />
        <Setter Property="Margin" Value="6,4" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#092A2E" BlurRadius="8" ShadowDepth="2" Opacity="0.2"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="8">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#008C70"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ======================= -->
    <!-- 📦 PAINEL LATERAL -->
    <!-- ======================= -->
    <Style x:Key="SidebarPanel" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource DarkBrush}" />
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#000000" BlurRadius="12" ShadowDepth="2" Opacity="0.25"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ======================= -->
    <!-- 📋 DATAGRID -->
    <!-- ======================= -->
    <Style TargetType="DataGrid">
        <Setter Property="Background" Value="White"/>
        <Setter Property="AlternatingRowBackground" Value="#EAF3F3"/>
        <Setter Property="BorderBrush" Value="#E0E0E0"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="RowHeight" Value="32"/>
        <Setter Property="FontFamily" Value="Poppins"/>
    </Style>

</ResourceDictionary>
