<Window x:Class="Pim_04.Views.RelatoriosWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="DeskPro - Relatórios" Height="520" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="Black"
        ResizeMode="CanResize" MinWidth="600" MinHeight="400">
    <Grid>
        <Border Style="{StaticResource Card}" Width="324" MaxWidth="500" Padding="20" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Relatórios"
                           FontSize="22" FontWeight="Bold"
                           Foreground="{StaticResource BrushWhite}"
                           HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <TextBlock Text="Número de Chamados Abertos" Foreground="{StaticResource BrushWhite}" Margin="0,0,0,5"/>
                <TextBox x:Name="txtChamadosAbertos" Height="35" Margin="0,0,0,10" IsReadOnly="True"/>

                <TextBlock Text="Número de Chamados em Andamento" Foreground="{StaticResource BrushWhite}" Margin="0,0,0,5"/>
                <TextBox x:Name="txtChamadosEmAndamento" Height="35" Margin="0,0,0,10" IsReadOnly="True"/>

                <TextBlock Text="Número de Chamados Fechados" Foreground="{StaticResource BrushWhite}" Margin="0,0,0,5"/>
                <TextBox x:Name="txtChamadosFechados" Height="35" Margin="0,0,0,10" IsReadOnly="True"/>

                
                <Button x:Name="btnVoltar" Content="Voltar" Style="{StaticResource AltButton}" Margin="0,10,0,0" Click="BtnVoltar_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>