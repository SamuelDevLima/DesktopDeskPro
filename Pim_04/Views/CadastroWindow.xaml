<Window x:Class="Pim_04.Views.CadastroWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cadastro - DeskPro" Height="520" Width="800"
        WindowState="Maximized"
        Background="Black"
        ResizeMode="CanResize" MinWidth="600" MinHeight="400">
    <Grid>
        <Border Style="{StaticResource Card}" Width="324" MaxWidth="500" Padding="20" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Criar conta"
                           FontSize="22" FontWeight="Bold"
                           Foreground="{StaticResource BrushWhite}"
                           HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <TextBlock Text="Nome do Usuário" Foreground="{StaticResource BrushWhite}" Margin="0,0,0,5"/>
                <TextBox x:Name="txtNomeUsuario" Height="35" Margin="0,0,0,10" KeyDown="TxtNomeUsuario_KeyDown"/>

                <TextBlock Text="Nome da Organização" Foreground="{StaticResource BrushWhite}" Margin="0,0,0,5"/>
                <TextBox x:Name="txtOrganizacao" Height="35" Margin="0,0,0,10" KeyDown="TxtOrganizacao_KeyDown"/>

                <TextBlock Text="E-mail" Foreground="{StaticResource BrushWhite}" Margin="0,0,0,5"/>
                <TextBox x:Name="txtEmail" Height="35" Margin="0,0,0,10" KeyDown="TxtEmail_KeyDown"/>

                <TextBlock Text="Senha" Foreground="{StaticResource BrushWhite}" Margin="0,0,0,5"/>
                <PasswordBox x:Name="txtSenha" Height="35" Margin="0,0,0,10" KeyDown="TxtSenha_KeyDown"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <CheckBox x:Name="chkShowPassword" Checked="ChkShowPassword_Checked" Unchecked="ChkShowPassword_Unchecked" Margin="0,0,5,0"/>
                    <TextBlock Text="Mostrar Senha" Foreground="{StaticResource BrushWhite}" VerticalAlignment="Center"/>
                </StackPanel>

                <TextBlock Text="Confirmar Senha" Foreground="{StaticResource BrushWhite}" Margin="0,0,0,5"/>
                <PasswordBox x:Name="txtConfirmarSenha" Height="35" Margin="0,0,0,10" KeyDown="TxtConfirmarSenha_KeyDown"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <CheckBox x:Name="chkShowConfirmPassword" Checked="ChkShowConfirmPassword_Checked" Unchecked="ChkShowConfirmPassword_Unchecked" Margin="0,0,5,0"/>
                    <TextBlock Text="Mostrar Senha" Foreground="{StaticResource BrushWhite}" VerticalAlignment="Center"/>
                </StackPanel>

                <Button x:Name="btnCadastrar" Content="Criar Conta" Click="BtnCadastrar_Click"/>
                <Button x:Name="btnCancelar" Content="Cancelar" Style="{StaticResource AltButton}" Margin="0,10,0,0" Click="BtnCancelar_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>