<Window x:Class="Pim_04.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login - DeskPro" Height="400" Width="800"
        WindowState="Maximized"
        Background="Black"
        ResizeMode="CanResize" MinWidth="600" MinHeight="400">
	<Grid>
		<Border Style="{StaticResource Card}" Width="Auto" MaxWidth="420" Padding="20" HorizontalAlignment="Center" VerticalAlignment="Center">
			<StackPanel VerticalAlignment="Center">
				<TextBlock Text="Bem-vindo ao DeskPro"
                           FontSize="22" FontWeight="Bold"
                           Foreground="{StaticResource BrushWhite}"
                           HorizontalAlignment="Center" Margin="0,0,0,20"/>

				<TextBlock Text="Usuário" Foreground="{StaticResource BrushWhite}" Margin="0,0,0,5"/>
				<TextBox x:Name="txtUsuario" Height="35" Margin="0,0,0,10" KeyDown="TxtUsuario_KeyDown"/>

				<TextBlock Text="Senha" Foreground="{StaticResource BrushWhite}" Margin="0,0,0,5"/>
				<PasswordBox x:Name="txtSenha" Height="35" Margin="0,0,0,10" KeyDown="TxtSenha_KeyDown"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <CheckBox x:Name="chkShowPassword" Checked="ChkShowPassword_Checked" Unchecked="ChkShowPassword_Unchecked" Margin="0,0,5,0"/>
                    <TextBlock Text="Mostrar Senha" Foreground="{StaticResource BrushWhite}" VerticalAlignment="Center"/>
                </StackPanel>

                <Button x:Name="btnEntrar" Content="Entrar" Click="btnEntrar_Click" Height="40" Width="200" FontSize="16" Padding="10,4"/>
                <Button x:Name="btnCancelar" Content="Cancelar" Style="{StaticResource AltButton}" Margin="0,10,0,0" Click="btnCancelar_Click" Height="40" Width="200" FontSize="16" Padding="10,4"/>

				<TextBlock Margin="0,20,0,0" HorizontalAlignment="Center">
                    <Run Text="Ainda não tem conta?" Foreground="{StaticResource BrushWhite}"/>
                    <Hyperlink Click="AbrirCadastro_Click" Foreground="{StaticResource BrushWhite}">Criar conta</Hyperlink>
				</TextBlock>
			</StackPanel>
		</Border>
	</Grid>
</Window>