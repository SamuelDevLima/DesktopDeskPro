<Window x:Class="Pim_04.Views.EditarChamadoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Editar Chamado - DeskPro" Height="520" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="Black"
        ResizeMode="CanResize" MinWidth="600" MinHeight="400">
    <Grid>
        <Border Style="{StaticResource Card}" Width="324" MaxWidth="500" Padding="20" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Editar Chamado"
                           FontSize="22" FontWeight="Bold"
                           Foreground="{StaticResource BrushWhite}"
                           HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <TextBlock Text="Título" Foreground="{StaticResource BrushWhite}" Margin="0,0,0,5"/>
                <TextBox x:Name="txtTitulo" Height="35" Margin="0,0,0,10" KeyDown="TxtTitulo_KeyDown"/>

                <TextBlock Text="Descrição" Foreground="{StaticResource BrushWhite}" Margin="0,0,0,5"/>
                <TextBox x:Name="txtDescricao" Height="60" Margin="0,0,0,10" AcceptsReturn="True" TextWrapping="Wrap" KeyDown="TxtDescricao_KeyDown"/>

                <TextBlock Text="Status" Foreground="{StaticResource BrushWhite}" Margin="0,0,0,5"/>
                <TextBox x:Name="txtStatus" Height="35" Margin="0,0,0,10" KeyDown="TxtStatus_KeyDown"/>

                <TextBlock Text="Nome Usuário" Foreground="{StaticResource BrushWhite}" Margin="0,0,0,5"/>
                <TextBox x:Name="txtNomeUsuario" Height="35" Margin="0,0,0,10" KeyDown="TxtNomeUsuario_KeyDown"/>

                <Button x:Name="btnAlterar" Content="Alterar" Click="BtnAlterar_Click"/>
                <Button x:Name="btnCancelar" Content="Cancelar" Style="{StaticResource AltButton}" Margin="0,10,0,0" Click="BtnCancelar_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>