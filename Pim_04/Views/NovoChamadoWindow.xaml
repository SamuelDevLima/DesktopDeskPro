<Window x:Class="Pim_04.Views.NovoChamadoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Novo Chamado - DeskPro" Height="449" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="Black"
        ResizeMode="NoResize" MinWidth="300" MinHeight="300" ShowInTaskbar="False">
    <Grid Margin="0,0,0,14">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>
        <Border Style="{StaticResource Card}" Width="292" MaxWidth="350" Padding="20" HorizontalAlignment="Center" Margin="0,10,0,0" Cursor="Hand">
            <StackPanel VerticalAlignment="Top" Margin="0,15,0,0">

                <TextBlock Text="Novo Chamado"
                           FontSize="20" FontWeight="Bold"
                           Foreground="{StaticResource BrushWhite}" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <TextBlock Text="Título" Foreground="{StaticResource BrushWhite}" Margin="0,0,0,5"/>
                <TextBox x:Name="txtTitulo" Height="35" Margin="0,0,0,10"/>

                <TextBlock Text="Descrição" Foreground="{StaticResource BrushWhite}" Margin="0,0,0,5"/>
                <TextBox x:Name="txtDescricao" Height="80" AcceptsReturn="True" TextWrapping="Wrap" Margin="0,0,0,10"/>
                <ComboBox x:Name="cbSituacao" Height="35" Margin="0,0,0,10" Visibility="Collapsed">
                    <ComboBoxItem Content="Aberto"/>
                    <ComboBoxItem Content="Em Andamento"/>
                    <ComboBoxItem Content="Fechado"/>
                </ComboBox>
                <Button x:Name="btnSalvar" Content="Salvar" Foreground="{StaticResource BrushWhite}" Click="btnSalvar_Click" Margin="0,10,0,0" Width="248" Height="38"/>
                <Button x:Name="btnCancelar" Content="Cancelar" Style="{StaticResource AltButton}" Click="btnCancelar_Click" Margin="0,10,0,0" Width="247"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>